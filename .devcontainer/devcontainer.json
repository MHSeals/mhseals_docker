{
    "name": "Roboboat Development Container",
    "privileged": true,
    "remoteUser": "${env:USER}",
    "build": {
        "dockerfile": "Dockerfile",
        "args": {
            "USERNAME": "${env:USER}"
        }
    },
    "features": {
      "./features/gazebo": {
        "variant": "garden"
      }
    },
    "workspaceFolder": "${env:HOME}/roboboat_ws",
    "workspaceMount": "source=${localWorkspaceFolder},target=${env:HOME}/roboboat_ws,type=bind",
    "customizations": {
        "vscode": {
            "extensions":[
                "ms-vscode.cpptools",
                "ms-vscode.cpptools-themes",
                "twxs.cmake",
                "donjayamanne.python-extension-pack",
                "eamodio.gitlens",
                "Ranch-Hand-Robotics.rde-pack"
            ]
        }
    },
    "containerEnv": {
        "ROS_LOCALHOST_ONLY": "1",
        "ROS_DOMAIN_ID": "42",
        "ROS_WS": "${env:HOME}/roboboat_ws"
    },
    "runArgs": [
        "--net=host",
        "--pid=host",
        "--ipc=host",
        "-e", "DISPLAY=${env:DISPLAY}"
    ],
    "mounts": [
        "source=/tmp/.X11-unix,target=/tmp/.X11-unix,type=bind,consistency=cached",
        "source=/dev/dri,target=/dev/dri,type=bind,consistency=cached"
    ],
    "forwardPorts": [10000],
    "postCreateCommand": ".devcontainer/postcreate.sh"
}
