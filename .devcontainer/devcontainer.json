{
    "name": "ROS 2 Development Container",
    "privileged": true,
    "remoteUser": "${env:USER}",
    "build": {
        "dockerfile": "Dockerfile",
        "args": {
            "USERNAME": "${env:USER}"
        }
    },
    "workspaceFolder": "${env:HOME}/roboboat_ws",
    "workspaceMount": "source=${localWorkspaceFolder},target=${env:HOME}/roboboat_ws,type=bind",
    "customizations": {
        "vscode": {
            "extensions":[
                "ms-vscode.cpptools",
                "ms-vscode.cpptools-themes",
                "twxs.cmake",
                "donjayamanne.python-extension-pack",
                "eamodio.gitlens",
                "ms-iot.vscode-ros"
            ]
        }
    },
    "containerEnv": {
        "ROS_LOCALHOST_ONLY": "1",
        "ROS_DOMAIN_ID": "42",
        "ROS_WS": "${env:HOME}/roboboat_ws"
    },
    "runArgs": [
        "-e", "DISPLAY=host.docker.internal:0.0"
    ],
    "mounts": [
        "source=${env:HOME}/.Xauthority,target=/root/.Xauthority,type=bind"
    ],
    "postCreateCommand": "sudo rosdep update && sudo rosdep install --from-paths src --ignore-src -y && echo 'source /opt/ros/humble/setup.bash && source /workspace/venv/bin/activate' >> ~/.bashrc"
}
